developer=http://indiecomputing.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=0.1
pkgrel=1
pkgdesc="Configures local SMTP to send e-mail for an originating domain via Amazon SES"
arch=('any')
license=("GPL")
options=('!strip')
depends=('postfix')
install=install

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Icons
#    mkdir -p ${pkgdir}/srv/http/_appicons/$pkgname
#    install -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/srv/http/_appicons/$pkgname/

# Config files go here
    mkdir -p ${pkgdir}/etc/amazonses
    mkdir -p ${pkgdir}/etc/amazonses/{sender_dependent_relayhost_map.d,smtp_sasl_password_map.d}
    
# Code
    mkdir -p ${pkgdir}/usr/share/${pkgname}/bin
    install -m755 ${startdir}/bin/manage-site.pl ${pkgdir}/usr/share/${pkgname}/bin/

    mkdir -p ${pkgdir}/usr/lib/perl5/vendor_perl
    install -m755 ${startdir}/vendor_perl/AmazonSes.pm ${pkgdir}/usr/lib/perl5/vendor_perl/
}
