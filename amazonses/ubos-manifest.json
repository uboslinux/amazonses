{
    "type" : "app",

    "cardinality" : "onepersite",

    "roles" : {
        "generic" : {
            "appconfigitems" : [
                {
                    "type"         : "perlscript",
                    "source"       : "bin/manage-site.pl"
                }
            ]
        },
    },
    "customizationpoints" : {
        "aws_access_key_id" : {
            "name" : "AWS access key",
            "type"     : "string",
            "required" : true
        },
        "aws_secret_key" : {
            "name" : "AWS secret key",
            "type"     : "password",
            "required" : true
        },
        "ses_mail_server" : {
            "name" : "Hostname of the SES mail server",
            "type" : "string",
            "required" : false,
            "default" : {
                "value" : "email-smtp.us-east-1.amazonaws.com"
            }
        }
    }
}
